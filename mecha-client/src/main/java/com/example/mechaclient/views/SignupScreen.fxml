<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.mechaclient.controllers.SignupScreenController">
    
    <!-- Login link at top right -->
    <Button fx:id="loginButton" style="-fx-background-color: transparent;" text="Login" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />
    
    <!-- Main content -->
    <VBox alignment="CENTER" maxWidth="400" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
        
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Create an account" />
        
        <Label style="-fx-text-fill: #666666;" text="Enter your email below to create your account" />
        
        <TextField fx:id="emailField" promptText="name@example.com" style="-fx-pref-height: 40px; -fx-background-radius: 6px;" maxWidth="500"/>
        
        <Button fx:id="signInEmailButton" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-pref-width: 400px; -fx-pref-height: 40px; -fx-background-radius: 6px;" text="Sign In with Email" />
        
        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-text-fill: #666666;" text="By clicking continue, you agree to our" />
            <Hyperlink style="-fx-border-width: 0;" text="Terms of Service" />
            <Label style="-fx-text-fill: #666666;" text="and" />
            <Hyperlink style="-fx-border-width: 0;" text="Privacy Policy" />
            <Label style="-fx-text-fill: #666666;" text="." />
        </HBox>
        
    </VBox>
</AnchorPane>
